<main class="main" id="main">
<div class="pagetitle">
    <h1>Requests</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/helpseeker">Home</a></li>
            <li class="breadcrumb-item">Components</li>
            <li class="breadcrumb-item active">Requests</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="container mt-4">
    <div class="row">
        <% offers.forEach(offer => { %>
              <% const offerRequestID = offer.requestID.toString(); %>
              <% const request = requestUser.find(request => request._id.toString() === offerRequestID); %>
            <% if (request) { %>
                <!-- Display request details -->
                <div class="col-md-4">
                    <div class="card">
                        <img class="request-image" src="data:<%= request.image.contentType %>;base64,<%= request.image.image.toString('base64') %>" alt="Client Image">
                        <div class="card-body">
                            <h5 class="card-title">Homeowner: <%= helpseekers.find(helpseeker => helpseeker.id === request.helpseekerId).fullName %></h5>
                            <p class="card-text">Bid: <%= offer.bid %></p>
                            <p class="card-text">Status: <%= offer.status %></p>
                            <button class="btn btn-primary mr-2" onclick="openUpdateModal()">Update</button>
                            <button class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            <% } %>

<!-- Modal Structure -->
<div class="modal fade" id="updateOfferModal" tabindex="-1" aria-labelledby="updateOfferModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="updateOfferModalLabel">Update Offer</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <!-- Form -->
              <form id="updateOfferForm" action="/tech/updateOffer" method="post">
              <% const offerId = offer._id.toString(); %>

                  <input type="hidden" name="offerID" value="<%= offerId %>">

                  <div class="mb-3">
                      <label for="updateBid" class="form-label">Bid</label>
                      <input type="number" class="form-control" id="updateBid" name="bid" placeholder="Enter your bid">
                  </div>
                  <div class="mb-3">
                      <label for="updateComments" class="form-label">Comments</label>
                      <textarea class="form-control" id="updateComments" name="comments" rows="3" placeholder="Enter details of your offer"></textarea>
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary">Update Offer</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>


        <% }) %>
