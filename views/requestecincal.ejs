  <main id="main" class="main">
    <div class="pagetitle">
        <h1>Requests</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home/helpseeker">Home</a></li>
                <li class="breadcrumb-item">Components</li>
                <li class="breadcrumb-item active">Requests</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <% requests.forEach(request => { %>
                    <div class="col-md-6 col-lg-4 d-flex align-items-stretch mb-4">
                        <!-- Profile Card -->
                        <div class="card h-100">
                            <img class="request-image" src="data:<%= request.image.contentType %>;base64,<%= request.image.image.toString('base64') %>" alt="Client Image">
                            <div class="card-body d-flex flex-column">
                                <!-- Homeowner's Name -->
                                <% const helpseeker = helpseekers.find(helpseeker => helpseeker.id === request.helpseekerId); %>
                                <h5 class="card-title">Homeowner: <%= helpseeker.fullName %></h5>
                                <!-- Phone Number -->
                                <p class="card-text"><strong>Phone:</strong> <%= helpseeker.phoneNumber %></p>
                                <!-- Details about a Malfunction -->
                                <p class="card-text"><strong>Details about the malfunction:</strong> <%= request.details %></p>
                                <!-- Action Buttons -->
                                <div class="mt-auto d-flex justify-content-between">
                                    <button class="btn btn-outline-secondary" type="button">Ignore</button>
                                    <!-- Trigger Modal Button for Adding Offer or Assistance -->
                                    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#addOfferModal">Add Offer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                                                        
                        <!-- Modal Structure -->
                      <div class="modal fade" id="addOfferModal" tabindex="-1" aria-labelledby="addOfferModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="addOfferModalLabel">Add Offer</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <!-- Form -->
                              <form id="offerForm" action="/tech/addOffer" method="post">
                                <input type="text" name="requestID" value="<%= request._id %>" style="display: none;">
                                <div class="mb-3">
                                  <label for="bid" class="form-label">Bid</label>
                                  <input type="number" class="form-control" id="bid" name="bid" placeholder="Enter your bid">
                                </div>
                                <div class="mb-3">
                                  <label for="comments" class="form-label">Comments</label>
                                  <textarea class="form-control" id="comments" name="comments" rows="3" placeholder="Enter details of your offer"></textarea>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Submit Offer</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>

                <% }) %>
            </div>
        </div>
    </section>

</main>

  
  <script>
    function submitOffer() {
      // Show success message
      var successMessage = document.createElement('div');
      successMessage.classList.add('alert', 'alert-success');
      successMessage.innerHTML = 'Offer sent successfully!';
      document.body.appendChild(successMessage);
  
      // Hide success message after 2 seconds
      setTimeout(function() {
        successMessage.remove();
      }, 2000);
  }

  </script>









